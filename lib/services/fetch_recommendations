import 'package:http/http.dart' as http;
import 'dart:convert';
import 'package:cloud_firestore/cloud_firestore.dart';

Future<void> fetchRecommendationsFromModel({
  required String uid,
  required Map<String, dynamic> userData,
}) async {
  final modelUrl = Uri.parse('https://nutrinudge.onrender.com/generate-plan');

  try {
    final response = await http.post(
      modelUrl,
      headers: {'Content-Type': 'application/json'},
      body: jsonEncode(userData),
    );

    if (response.statusCode == 200) {
      final data = jsonDecode(response.body);

      // Store response in Firestore
      await FirebaseFirestore.instance
          .collection('users')
          .doc(uid)
          .collection('recommendations')
          .add({
        'recommendation': data,
        'based_on': userData,
      });

      print("Recommendation saved successfully.");
    } else {
      print("Server Error: ${response.body}");
    }
  } catch (e) {
    print("Failed to fetch recommendations: $e");
  }
}
